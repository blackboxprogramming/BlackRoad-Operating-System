# 041: Showing Output
# Display information to the user

# Simple text
show "Hello!"

# Variables
name = "Alex"
show name

# Template strings
age = 28
show "I am {age} years old"

# Multiple values
show "Name: {name}, Age: {age}"

# Show results of expressions
show "5 + 3 = {5 + 3}"

# Show objects
user = { name: "Alex", age: 28 }
show user

# Show lists
items = ["apple", "banana", "cherry"]
show items
