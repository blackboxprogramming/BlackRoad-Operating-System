{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "."
  },
  "include": ["scripts/**/*.ts", "tools/**/*.ts", "infra/**/*.json"],
  "ts-node": {
    "esm": false
  }
}
