{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2019",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "."
  },
  "include": ["scripts/**/*.ts", "tools/**/*.ts", "infra/**/*.json"],
  "ts-node": {
    "esm": true
  }
  "include": [
    "scripts/**/*.ts",
    "infra/**/*.json"
  ]
}
